@model IEnumerable<Bug.Models.BugFix>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FixDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bug)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FixDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bug.BugId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FixId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FixId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FixId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
